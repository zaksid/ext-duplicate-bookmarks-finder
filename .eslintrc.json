{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": ["error", "always"],
        "indent": ["error", 4],
        "max-len": ["error", { "code": 100, "comments": 150 }],
        "no-plusplus": "off",
        "no-use-before-define": "off"
    }
}
